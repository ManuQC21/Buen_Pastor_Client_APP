<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/custom_perfect_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CardView para Información del Equipo -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Información del Equipo"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:paddingBottom="8dp"
                        android:textColor="@android:color/black"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvLabelTipoEquipo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipo de Equipo:"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/tvTipoEquipo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="Laptop"
                            android:textColor="@color/azul_general"
                            android:textStyle="bold"/>
                    </RelativeLayout>

                    <!-- Nombre de Equipo -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvLabelNombreEquipo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre del Equipo:"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/tvNombreEquipo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="Laptop Dell"
                            android:textColor="@color/azul_general"
                            android:textStyle="bold"/>
                    </RelativeLayout>
                    <!-- Marca -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvLabelMarca"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Marca:"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/tvMarca"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="Dell"
                            android:textColor="@color/azul_general"
                            android:textStyle="bold"/>
                    </RelativeLayout>

                    <!-- Modelo -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvLabelModelo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Modelo:"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvModelo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="XPS 15"
                            android:textColor="@color/azul_general"
                            android:textStyle="bold"/>
                    </RelativeLayout>

                    <!-- Serie -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvLabelSerie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Serie:"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/tvSerie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="SN123456789"
                            android:textColor="@color/azul_general"
                            android:textStyle="bold"/>
                    </RelativeLayout>

                    <!-- Numero de Orden -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvLabelNumeroOrden"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Numero de Orden:"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/tvNumeroOrden"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="ORD789456"
                            android:textColor="@color/azul_general"
                            android:textStyle="bold"/>
                    </RelativeLayout>

                    <!-- Descripción -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvLabelDescripcion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/view_descripcion"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/tvDescripcion"
                            android:layout_width="306dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="38dp"
                            android:layout_toEndOf="@id/tvLabelDescripcion"
                            android:gravity="end"
                            android:text="Impresora láser color, modelo avanzado con capacidad de red."
                            android:textColor="@color/azul_general"
                            android:justificationMode="inter_word"
                            android:textStyle="bold"/>

                    </RelativeLayout>

                    <!-- Estado -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvLabelEstado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado:"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/tvEstado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="Nuevo"
                            android:textColor="@color/azul_general"
                            android:textStyle="bold"/>
                    </RelativeLayout>

                    <!-- Código Patrimonial -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvLabelCodigoPatrimonial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Código Patrimonial:"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/tvCodigoPatrimonial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="CPAT9999"
                            android:textColor="@color/azul_general"
                            android:textStyle="bold"/>
                    </RelativeLayout>

                    <!-- Código de Barras -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvLabelCodigoBarra"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Código de Barras:"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/tvCodigoBarra"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="123412341234"
                            android:textColor="@color/azul_general"
                            android:textStyle="bold"/>
                    </RelativeLayout>

                    <!-- Fecha de Compra -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvLabelFechaCompra"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fecha de Compra:"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/tvFechaCompra"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="11-05-2024"
                            android:textColor="@color/azul_general"
                            android:textStyle="bold"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CardView para Información del Responsable -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Información del Responsable"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:paddingBottom="8dp"
                        android:textColor="@android:color/black"/>

                    <!-- Nombre del Responsable -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvLabelNombreResponsable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre del Responsable:"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/tvNombreResponsable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="nombre"
                            android:textColor="@color/azul_general"
                            android:textStyle="bold"/>
                    </RelativeLayout>

                    <!-- Cargo del Responsable -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvLabelCargoResponsable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cargo:"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/tvCargoResponsable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="profesor"
                            android:textColor="@color/azul_general"
                            android:textStyle="bold"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CardView para Información de Ubicación -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Información de la Ubicación"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:paddingBottom="8dp"
                        android:textColor="@android:color/black"/>

                    <!-- Ambiente de la Ubicación -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvLabelAmbiente"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ambiente:"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/tvAmbiente"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="salon"
                            android:textColor="@color/azul_general"
                            android:textStyle="bold"/>
                    </RelativeLayout>

                    <!-- Ubicación Física -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvLabelUbicacionFisica"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ubicación Física:"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/tvUbicacionFisica"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="salon"
                            android:textColor="@color/azul_general"
                            android:textStyle="bold"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
